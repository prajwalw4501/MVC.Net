@{
}
@model StudentPortal.Models.AddStudentVM
<h1>---Student Registration---</h1>
<form method="post">

<div class="mt-3">
    <label class="form-label">Id</label>
    <input type="number" class="form-control" asp-for="Id" />
</div>
<div class="mt-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name" />
</div>
<div class="mt-3">
    <label class="form-label">Email</label>
    <input type="email" class="form-control" asp-for="Email"/>
</div>
<div class="mt-3">
    <label class="form-label">Phone No</label>
    <input type="number" class="form-control" asp-for="PhoneNo"/>
</div>
<div class="mt-3">
    <label class="form-check-label" for="subscribed">Subscribed</label>
    <input type="checkbox" class="form-check-input id="subscribed" asp-for="Subscribed"/>
</div>
<div class="mt-3">
    <button type="submit" class="btn btn-primary">Submit</button>
</div>
</form>